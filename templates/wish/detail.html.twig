{% extends 'base.html.twig' %}

{% block title %}
    {{ wish.title}} | {{ parent() }}
{% endblock %}

{% block body %}
    <div class="card mt-2 mb-2 w-50 m-auto">
        {%  if wish.filename %}
            <img src="{{ asset(app_images_wish_directory ~ '/' ~ wish.filename) }}"
                 class="card-img-top img-fluid" alt="{{ wish.title }}">
        {% endif %}
        <div class="card-body">
            <h5 class="card-title">{{ wish.title }}</h5>
            <p class="wish-credit">Created by {{ wish.author.username }} on {{ wish.dateCreated|date('Y-m-d') }}</p>
            <p class="card-text">{{ wish.description|nl2br }}</p>
            <p class="wish-category">Classified in: {{ wish.category? wish.category.name : '?'}}</p>
        </div>
        <div class="text-center">
            {% if app.user and is_granted('ROLE_ADMIN') %}
            <a href="{{ path('wish_delete',{'id':wish.id,'token':csrf_token('delete'~wish.id)}) }}"
               class="btn btn-danger mt-2" title="Delete the wish">Delete</a>
            {% endif %}
            
            {% if app.user == wish.author %}
            <a href="{{ path('wish_update',{'id':wish.id}) }}"
               class="btn btn-secondary mt-2" title="Update the wish">Modify</a>
            {% endif %}
        </div>
    </div>
{% endblock %}

